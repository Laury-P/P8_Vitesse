<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.openclassroom.p8_vitesse.ui.homeScreen.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_home_to_add"
            app:destination="@id/addFragment"/>
        <action
            android:id="@+id/action_home_to_detail"
            app:destination="@id/detailFragment">
            <argument
                android:name="candidateId"
                app:argType="long"
                />
        </action>
    </fragment>


    <fragment
        android:id="@+id/addFragment"
        android:name="com.openclassroom.p8_vitesse.ui.addScreen.AddFragment"
        android:label="Add">
        <argument
            android:name="candidateId"
            app:argType="long"
            android:defaultValue="-1L"
            />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.openclassroom.p8_vitesse.ui.detailScreen.DetailFragment"
        android:label="detail">
        <argument
            android:name="candidateId"
            app:argType="long"
            />
        <action android:id="@+id/action_detail_to_add"
            app:destination="@id/addFragment">
            <argument
                android:name="candidateId"
                app:argType="long"
                />
        </action>
    </fragment>


</navigation>